<!-- pictures details -->
<div class="container details_content" id="pictures_details">
  <div class="details_left col-md-10 col-xs-12">
    <div class="col-md-12 col-xs-12 text-center">
        <img src="{{ .item.PreViewImage }}" data-src="{{ .item.Image }}" class="lazyload pic_img blur-up" />
    </div>        
    <div class="img_text col-md-12 col-xs-12">
        <h5>{{ .item.Title }}</h5>
      <div class="col-md-8 col-xs-8">
          <p class="font_gray"><span>Added</span>{{ timeFormat .item.CreatedAt }}</b></p>
          <p class="font_gray"><span>Tags</span><b>{{ tags_string .item }}</b></p>
      </div>
      <div class="col-md-4 col-xs-4 text-right">
        <a href="{{ .item.Image }}" class="btn" download="image"><i class="fa fa-cloud-download"></i><small>Download</small></a>
      </div>
    </div>        
  </div>
  <div class="details_right col-md-2 col-xs-12">
    <div class="detail_btn col-md-12 col-xs-6">
      <a href="{{ addURLQuery req.URL.Path "action" "last" }}" class="col-md-8 col-md-offset-2 col-xs-5 btn btn-yellow"><b>Back</b></a>
      <a href="{{ addURLQuery req.URL.Path "action" "next" }}" class="col-md-8 col-md-offset-2 col-xs-5 btn btn-yellow"><b>Next</b></a>
    </div>
    <div class="likes_icon col-md-12 col-xs-6">
      <div class="like_up col-md-6 col-md-offset-3 col-xs-6">
        <img class="col-xs-5" src="/static/img/up.png">
        <h4 class="text-left col-xs-5 up-vote-count" data-seed="{{.item.Seed}}"></h4>
      </div>
      <div class="like_down col-md-6 col-md-offset-3 col-xs-6">
        <img class="col-xs-5" src="/static/img/down.png">
        <h4 class="text-left down-vote-count" data-seed="{{.item.Seed}}"></h4>
      </div>
    </div>
  </div>
  {{you_may_like}}
</div>
